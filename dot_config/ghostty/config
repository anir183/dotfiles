# Font Configuration
font-family = JetBrainsMono NFP SemiBold
font-family-bold = JetBrainsMono NFP ExtraBold
font-family-italic = JetBrainsMono NFP SemiBold
font-family-bold-italic = JetBrainsMono NFP ExtraBold
font-size = 10

# Window Configuration
window-decoration = false
window-padding-x = 4
window-padding-y = 1
background-opacity = 0.92
background-blur-radius = 32

# Cursor Configuration
cursor-style = block
cursor-style-blink = true
cursor-color=cell-foreground
cursor-text=cell-background

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = false
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

# Key bindings for common actions
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:\n

# Rando stuff
gtk-single-instance = true

# Dank color generation
theme = catppuccin-mocha
